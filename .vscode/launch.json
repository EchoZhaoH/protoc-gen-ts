{
    "version": "0.2.0",
    "inputs": [
        {
            "id": "protos",
            "type": "command",
            
        }
    ],
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug protoc-gen-ts tests",
            "protocol": "inspector",
            "runtimeExecutable": "protoc",
            "sourceMaps": true,
            "autoAttachChildProcesses": true,
            "outputCapture": "std",
            "args": [
                "--plugin=protoc-gen-ts=./.vscode/debug",
                "--ts_out=./test",
                "./test/**/*.proto"
            ],
            "cwd": "${fileWorkspaceFolder}",
            "outFiles": [
                "${fileWorkspaceFolder}/**/*.js"
            ]
        }
    ]
}